%header
  %aside
    = link_to "Update Account Settings", edit_account_path, :id => "update-account" if can?(:manage, @user)
    %dl
      %dt Total Checkins:
      %dd= @user.check_ins_count
      %dt Total Airports:
      %dd= @user.airports_count
      %dt Total Distance:
      %dd= @user.distance_sum

  = image_tag @user.avatar_url

  %h1
    = "#{@user}: "
    = link_to(@user.handle, twitter_user_url(@user))

  - if @user.location.present?
    %h2= @user.location
  - if @user.website.present?
    %p= link_to @user.website, @user.website

  %p.description= @user.description



- if @user.expose_flight_history?
  %section#flight-history
    %h2 Flight History
    %table
      %thead
        %tr
          %th{:width => "20%"} Flight
          %th{:width => "20%"} From
          %th{:width => "20%"} To
          %th{:width => "20%"} Departure
          %th{:width => "20%"} Arrival
      %tbody
        - @flights.each do |flight|
          %tr
            %td= link_to flight.number, flight
            %td= flight.origin
            %td= flight.destination
            %td= flight.start_at
            %td= flight.end_at
        - if @flights.empty?
          %tr.no-results
            %td{:colspan => 5} No results found.


  %section#airports-visited
    %h2 Airports Visited
    %table
      %tbody
        - @airports.each do |airport|
          %tr{:class => cycle("odd", "even")}
            %td{:width => "20%"}= link_to airport, airport
            %td{:width => "60%"}= link_to airport.city_name, airport
            %td{:width => "20%"}= "x#{airport.check_ins_count}"
        - if @airports.empty?
          %tr.no-results
            %td{:colspan => 3} No results found.
